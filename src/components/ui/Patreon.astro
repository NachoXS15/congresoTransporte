---
const {nombre, img, link, alt} = Astro.props


---
<div class="">
    <div class="aspect-square w-24 md:w-32 bg-slate-400 rounded-full group grid place-content-center relative overflow-hidden">
        <div class="absolute w-full h-full z-0 group-hover:opacity-15">
            {
                img? 
                <img src="img" alt={alt}/>
                :
                <img src="assets/img/300_300.png" alt='no hay imagen'/>
            }
        </div>
        <a href="/transporte" class="text-transparent transition-all translate-y-5 group-hover:translate-y-0 group-hover:text-gray-950">{nombre}</a>
    </div>

</div>