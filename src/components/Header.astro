<header class="w-full bg-gray-300 dark:text-gray-600">
    <div class="w-full mx-auto sm:container">
        <div class="w-100 px-0 sm:px-5 pb-0 sm:py-5 flex justify-between items-center">
            <nav class="w-full mt-3 flex flex-wrap md:flex-nowrap flex-col sm:flex-row justify-start md:justify-end ">
                <a href="#" title="Volver a inicio">
                    <img src="assets/img/LogoCOFETRA-mini.png" class="max-h-12" alt="logo cofetra"/>
                </a>
                <div class="md:hidden text-center">
                    <button id="menu-btn" class="text-2xl mt-2">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                </div>
                <div id="menu" class="w-full lg:w-2/3 flex flex-col md:flex-row md:justify-end">
