---
const {name,align, color} = Astro.props
---

<h2 class:list={["text-2xl mt-3 ml-5 mb-4 relative inline-block ",
    {
        "text-center":align == "center",
        "text-right":align == "right",
        "text-white": color == 'white',
    },
    ]}>{name}</h2>

<style>
    h2{
        &::before{
            content:'';
            position: absolute;
            display: inline-block;
            width: 5px;
            left: -10px;
            right: -10px;
            height: 40px;
            background: #3D5A7A;
        }
    }
</style>